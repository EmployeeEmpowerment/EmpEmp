<div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :private, 'Keep Profile Private?' %><br>
  <%= f.check_box :private %>
</div>
<div class="field">
  <%= f.label :gender %><br>
  <% genders_array = GENDERS.flatten.map { |gender| [gender['name'], gender['abbreviation']] if gender['name'] }.compact %>
  <%= f.select :gender, genders_array %>
</div>
<div class="field">
  <%= f.label :race %><br>
  <% races_array = RACES.flatten.map { |race| [race['name'], race['abbreviation']] if race['name'] }.compact %>
  <%= f.select :race, races_array %>
</div>
<div class="field">
  <%= f.label :lgbtqia_plus, 'Identify as LQBTQIA+?' %><br>
  <%= f.check_box :lgbtqia_plus %>
</div>
<div class="field">
  <%= f.label :immigrant %><br>
  <%= f.check_box :immigrant %>
</div>
<div class="field">
  <%= f.label :expat %><br>
  <%= f.check_box :expat %>
</div>
<div class="field">
  <%= f.label :has_disability %><br>
  <%= f.check_box :has_disability %>
</div>
<div class="field">
  <%= f.label :veteran %><br>
  <%= f.check_box :veteran %>
</div>
<div class="field">
  <%= f.label :year_of_birth %><br>
  <%= f.text_field :year_of_birth, size: 4, maxlength: 4 %>
</div>